<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.smarttoolfactory.bubblelayout.BubbleLayout
        android:id="@+id/bubbleViewBottom3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:background="#00796b"
        android:padding="6dp"
        app:arrowAlignment="bottomRight"
        app:arrowHeight="16dp"
        app:arrowShape="TriangleRight"
        app:cornerRadius="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrow BOTTOM_RIGHT BOTTOM_RIGHT BOTTOM_RIGHT"
            android:textColor="@color/white" />
    </com.smarttoolfactory.bubblelayout.BubbleLayout>

</FrameLayout>